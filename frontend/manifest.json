{
  "name": "Malware_URL",
  "version": "1.0.02",
  "description": "A phishing detector plugin",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "webNavigation",
    "webRequest"
  ],
  "host_permissions": ["http://*/*", "https://*/*"],
  "icons": {
    "48": "virus1.png"
  },
  "background": {
    "service_worker": "bg-loader.js"
  },
  "action": {
    "default_popup": "plugin_ui.html"
  },
  "content_scripts":[
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["features.js","custom_alert.js","test.js","checkUrl.js","checkUrl.js"]
    }
  ],
  "manifest_version": 3
}
